---
layout: null
---

<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">
    <url>
        <loc>{{ site.url }}/</loc>
        <priority>1.0</priority>
        <video:video>
            <video:thumbnail_loc>https://img.youtube.com/vi/FCccwyUnJLg/0.jpg</video:thumbnail_loc>
            <video:title>{{ site.title }}</video:title>
            <video:description>סטיילינג לדתיות - זה לא רק הבגד - זה החיבור שלך לעצמך</video:description>
            <video:player_loc allow_embed="yes" autoplay="ap=1">https://www.youtube.com/v/FCccwyUnJLg</video:player_loc>
        </video:video>
    </url>{%
    assign pages=site.pages | sort: "date" | sort: "order" %}{%
    for page in pages %}{%
        unless page.draft %}{%
            if page.category == null and page.title and page.order or page.url == '/privacy' %}{%
                assign relative_url=page.url | remove_first: '/' %}
    <url>
        <loc>{{ site.url }}{{ page.url }}</loc>{% if page.image %}
        <image:image>
            <image:loc>{{ site.url }}{{ site.assets }}{{ page.image }}</image:loc>
        </image:image>{% endif %}{% if page.video %}
        <video:video>
            <video:thumbnail_loc>https://img.youtube.com/vi/{{ page.video }}/0.jpg</video:thumbnail_loc>
            <video:title>{{ page.title }}</video:title>
            <video:player_loc allow_embed="yes" autoplay="ap=1">https://www.youtube.com/v/{{ page.video }}</video:player_loc>
        </video:video>{% endif %}
        <priority>1.0</priority>
    </url>{%
    for subpage in pages %}{%
        if subpage.private == null %}{% if subpage.category == relative_url or relative_url == "blog" and subpage.layout == "post" %}
    <url>
        <loc>{{ site.url }}{{ subpage.url }}</loc>{% if subpage.date %}
        <lastmod>{{ subpage.date | date_to_xmlschema }}</lastmod>{% endif %}{% if subpage.image %}
        <image:image>
            <image:loc>{{ site.url }}{{ site.assets }}{{ subpage.image }}</image:loc>
        </image:image>{% endif %}{% if subpage.video %}
        <video:video>
            <video:thumbnail_loc>https://img.youtube.com/vi/{{ subpage.video }}/0.jpg</video:thumbnail_loc>
            <video:title>{{ subpage.title }}</video:title>
            <video:player_loc allow_embed="yes" autoplay="ap=1">https://www.youtube.com/v/{{ subpage.video }}</video:player_loc>
        </video:video>{% endif %}
        <priority>0.8</priority>
    </url>{%
        endif %}{% endif %}{%
    endfor %}{%
            endif %}{%
        endunless %}{%
    endfor %}
</urlset>
